<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ed2d50"
    tools:context=".LoginSignupPage">



        <androidx.cardview.widget.CardView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:elevation="12dp"

            app:cardCornerRadius="65dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"

                android:src="@drawable/profile" />
        </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/login_Signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImage"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn2"
            android:text="Sign Up"
            android:layout_marginLeft="150dp"
            android:textColor="@color/black" />

        <Button

            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn1"
            android:text="Log in"
            android:textColor="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/socialicons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_Signup"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"

        >

        <ImageView
            android:id="@+id/twittericon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/twitter"

            />

        <ImageView
            android:id="@+id/fbicon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/twittericon"
            android:src="@drawable/fb" />

        <ImageView
            android:id="@+id/googleicon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/fbicon"
            android:layout_marginRight="20dp"
            android:src="@drawable/google" />


    </RelativeLayout>

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/socialicons"
        android:layout_centerHorizontal="true"
        android:text="or"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username / Email address"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/or"
        android:layout_marginTop="10dp"
        android:textColor="#75088d"
        android:textSize="15dp"
        />

    <EditText
        android:id="@+id/etusername"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvusername"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="Username"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />
    <TextView
        android:id="@+id/tvpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etusername"
        android:layout_marginTop="10dp"
        android:textColor="#75088d"
        android:textSize="15dp"
        />

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvpassword"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:gravity="center"
        android:inputType="textPassword"
        />

    <CheckBox
        android:id="@+id/cbremember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etpassword"
        android:layout_marginLeft="50dp"
        android:text="Remember me"

        />

    <Button
        android:id="@+id/btndone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cbremember"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_btn1"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
        android:text="Done"
        android:gravity="center"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:layout_below="@id/btndone"
        android:textColor="@color/white"
        android:gravity="center"
/>






</RelativeLayout>